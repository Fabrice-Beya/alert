{
  "expo": {
    "name": "incidence",
    "description": "An incidence logging application for real estate residents.",
    "slug": "incidence",
    "privacy": "public",
    "sdkVersion": "31.0.0",
    "platforms": ["ios", "android"],
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "##1C1B1B"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fabrice.incidence"
    },
    "android": {
      "package": "com.fabrice.incidence",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_NOTIFICATION_POLICY",
        "com.google.android.c2dm.permission.RECEIVE",
        "READ_EXTERNAL_STORAGE",
        "READ_INTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "WRITE_INTERNAL_STORAGE"
      ]
    },
    "notification": {
      "icon":  "./assets/icon_black.png",
      "color": "#808080"
    }
  }
}
